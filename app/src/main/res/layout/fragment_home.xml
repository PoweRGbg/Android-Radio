<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:id="@+id/theme"
    android:background="@drawable/grill_big"
    android:textColor="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/grill3">

        <TextView
            android:id="@+id/station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:text="Radio"
            android:textColor="@color/white"
            android:textSize="36dp"
            android:typeface="normal"
            />


        <TextView
            android:id="@+id/etat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="en attente"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="italic"
            android:typeface="normal" />

        <TextView
            android:id="@+id/bitrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_horizontal"
            android:text="0kb/s"
            android:textColor="@color/white"
            android:textSize="8dp"
            android:typeface="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_play"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/ic_equalizer0"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/icon_volume"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/volume0"
                android:baselineAligned="false"
                android:gravity="center_horizontal" />
        </LinearLayout>


        <ImageButton
            android:id="@+id/play"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/bouton_play" />

        <ImageButton
            android:id="@+id/stop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:background="@color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/bouton_stop"
            android:visibility="gone" />


        <TextView
            android:id="@+id/n_button1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="242dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/black75"
            android:textSize="10dp" />


        <ImageButton
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="255dp"
            android:background="@color/transparent"
            android:src="@drawable/bouton_radio" />


        <TextView
            android:id="@+id/button1_txt"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="290dp"
            android:text="1"
            android:textAlignment="center"
            android:textColor="@color/black75"
            android:textSize="10dp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="17dp"
            android:background="@color/transparent"
            android:src="@drawable/bouton_power" />
    </LinearLayout>

</FrameLayout>
